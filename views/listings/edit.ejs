<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">please enter the Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Description is ok</div>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <div class="mb-3">
                    Original Listing Image: <br>
                    <img src="<%= originalImageUrl %>">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="catagory" class="form-label">Choose Catagory</label>
                        <select class="form-select form-control" name="listing[catagory]" required>
                            <option value="Trending" <%=listing.catagory==="Trending" ? 'selected' : '' %>>Trending</option>
                            <option value="Rooms" <%=listing.catagory==="Rooms" ? 'selected' : '' %>>Rooms</option>
                            <option value="Iconic Cities" <%=listing.catagory==="Iconic Cities" ? 'selected' : '' %>>Iconic Cities</option>
                            <option value="Mountains" <%=listing.catagory==="Mountains" ? 'selected' : '' %>>Mountains</option>
                            <option value="Cabins" <%=listing.catagory==="Cabins" ? 'selected' : '' %>>Cabins</option>
                            <option value="Beach" <%=listing.catagory==="Beach" ? 'selected' : '' %>>Beach</option>
                            <option value="Surfing" <%=listing.catagory==="Surfing" ? 'selected' : '' %>>Surfing</option>
                            <option value="OMG" <%=listing.catagory==="OMG" ? 'selected' : '' %>>OMG</option>
                            <option value="Amazing pools" <%=listing.catagory==="Amazing pools" ? 'selected' : '' %>>Amazing pools</option>
                            <option value="Castles" <%=listing.catagory==="Castles" ? 'selected' : '' %>>Castles</option>
                            <option value="Camping" <%=listing.catagory==="Camping" ? 'selected' : '' %>>Camping</option>
                            <option value="Farms" <%=listing.catagory==="Farms" ? 'selected' : '' %>>Farms</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="valid-feedback">This looks good!</div>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
