<% layout("/layouts/boilerplate") %>
<style>
    .filter button{
        /* opacity: 0; */
        background-color: transparent;
        border: none;
    }
</style>
<body>
    <div id="filters">
        <div class="filter-icon">
            <div class="filter">
                <form action="/listings" method="get">
                    <input type="hidden" id="custId" name="catagory" value="Trending">
                    <button>
                        <div><i class="fa-solid fa-fire"></i></div>
                        <p>Trending</p>
                    </button>
                </form>
            </div>
            <div class="filter">
                <form action="/listings" method="get">
                    <input type="hidden" id="custId" name="catagory" value="Rooms">
                    <button>
                        <div><i class="fa-solid fa-bed"></i></div>
                        <p>Rooms</p>
                    </button>
                </form>
            </div>
            <div class="filter">
                <form action="/listings" method="get">
                    <input type="hidden" id="custId" name="catagory" value="Iconic Cities">
                    <button>
                        <div><i class="fa-solid fa-mountain-city"></i></div>
                        <p>Iconic Cities</p>
                    </button>
                </form>
            </div>
            <div class="filter">
                <form action="/listings" method="get">
                    <input type="hidden" id="custId" name="catagory" value="Mountains">
                    <button>
                        <div><i class="fa-solid fa-mountain"></i></div>
